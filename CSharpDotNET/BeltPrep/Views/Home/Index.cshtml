﻿@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-6">
        <h2>Events</h2>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Nr Guest</th>
     
    </tr>
  </thead>
  <tbody>
    @foreach(var item in ViewBag.aktivitet)
    {
                <tr>
      <th scope="row"> @item.EventId</th>
      <td><a asp-action="EventDetails" asp-route-id="@item.EventId"> @item.Name</a></td>
      <td>@item.Guests.Count</td>
    </tr>
    }
  
  </tbody>
</table>

    </div>
</div>