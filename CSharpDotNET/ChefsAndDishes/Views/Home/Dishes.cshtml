
@model Dish
<div class="head">
    <h1><a href="/">Chefs</a> | Dishes</h1>
    <a class="addLink" href="/AddDish">Add a Dish</a>
</div>
<h3>Yum, take a look at our tasty dishes!</h3>
<hr>
<table class="table table-striped table-bordered">
    <thead>
        <th>Name</th>
        <th>Chef</th>
        <th>Tastiness</th>
        <th>Calories</th>
    </thead>
    <tbody>
            @foreach(var d in ViewBag.AllDishes)
            {
                <tr>
                    <td>@d.Name</td>
                    <td>@d.Chef.FirstName @d.Chef.LastName</td>
                    <td>@d.Tastiness</td>
                    <td>@d.Calories</td>
                </tr>
            }
        
    </tbody>
</table>